<% if @model == 'user' %>
	<h3>Users search for "<%= @content %>"</h3>
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-4">
          <%= render 'public/posts/sidebar', users: @records, post: @post %>
        </div>
        <% @records.each do |user| %>
          <div class="col-md-8">
            <h3><%= user.name %></h3>
            <table class="table table-hover table-inverse">
              <thead>
                <th>Profile Image</th>
                <th>編集ボタン</th>
                <th>退会ボタン</th>
                <th colspan="3"></th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td>
                <%= image_tag user.get_profile_image(100,100) %>
                </td>
                <td>
                <% if user == current_user %>
                <p><%= link_to "プロフィール編集", edit_user_path(current_user) , class:"btn btn-success" %></p>
                <% end %>
                </td>
                <td>
                <% if user == current_user %>
                <span> ｜ </span><%= link_to "退会", user_path(current_user), class:"text-dark", class:"btn btn-secondary", method: :delete, "data-confirm" => "本当に退会しますか？" %>
                <% end %>
                </td>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </main>
<% elsif @model == 'post' %>
	<h3>Posts search for "<%= @content %>"</h3>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        <%= render 'public/posts/sidebar', posts: @records, post: @post %>
      </div>
      <div class="col-md-8">
        <h2>Posts</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @records.each do |post| %>
            <tr>
              <td>
                <%= link_to user_path(post.user.id) do %>
                  <%= image_tag post.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td>
                <%= post.body %>
              </td>
              <td>
                <%= link_to "編集" ,edit_post_path(post.id), class:"btn btn-sm btn-success" %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% end %>