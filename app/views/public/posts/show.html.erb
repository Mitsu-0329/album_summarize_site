<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<div class="post-detail py-5 bg-light">
  <div class="container">
    <div class="card mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-sm-12 col-md-2">
            <%= image_tag @post.post_image, width: "200px", class: "mt-3 rounded-circle"; %>
          </div>
          <div class="col-sm-12 col-md-10">
            <p class="card-title">
              <%= link_to(post_path(@post.id), class:"text-dark") do %>
                <strong><i class="fa-regular fa-flag"></i><span> <%= @post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-title">本文：<%= @post.body %></p>
            <span><i class="fa-solid fa-user"></i> By <%= link_to(user_path(@post.user_id)) do %> <%= @post.user.name %> <% end %>｜ </span>
            

              <span><i class="fa-solid fa-calendar-days"></i> <%= @post.created_at.strftime('%Y/%m/%d') %> ｜ </span>
            <span><i class="fa-solid fa-comment"></i> <%= link_to "#{@post}", post_path(@post.id), class:"text-dark" %> ｜ </span>
            <%# if @post.favorited_by?(current_user) %>
              <span>
                <%#= link_to(post_favorite_path(@post), class:"text-dark", method: :delete) do %>
                  <i class="fa-solid fa-heart"></i> <%#= @post.favorites.count %>
                <%# end %>
              </span>
              <%# else %>
              <span>
                <%#= link_to(post_favorite_path(@post), class:"text-dark", method: :post) do %>
                  <i class="fa-solid fa-heart"></i> <%#= @post.favorites.count %>
                <%# end %>
              </span>
            <%# end %>
            <td>
            <% if @post.user == current_user %>
              <%= link_to "編集" ,edit_post_path(@post.id), class:"btn btn-sm btn-success" %>
            <% end %>
            </td>            
            <% if @post.user == current_user %>
              <span> ｜ </span><%= link_to "削除", post_path(@post), class:"text-dark", method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
            <div class="new-comment card-text">
              <%= form_with(model:[@post, @post_comment]) do |f| %>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">コメントする</label>
                <%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
              </div>
              <%= f.submit "送信する", class:"btn btn-lg btn-info mt-2 float-right" %>
              <% end %>
            </div>
        

          </div>
        </div>
        <hr>
        <hr>
      </div>
    </div>
  </div>
</div>