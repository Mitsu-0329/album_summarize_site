<div class="container px-5 px-sm-0 mx-sm-auto">
  <div class="row">
    <div class="col-md-8 mx-sm-auto">
      <div class="form-body">
        <h2>ジャンル管理</h2>
        <% if @genre.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @genre.errors.count %>件のエラーが発生しました
            </h6>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @genre do |f| %>

          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
            </div>
            <%= f.text_field :genre_name, class: "form-control", placeholder: "ジャンル名" %>
          </div>
          <hr>
          <%= f.submit 'ジャンル作成', class: "btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      
        <h2>Genres</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Genre name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td>
                  <%= link_to genres_path(genre.id) do %>
                    <%= genre.genre_name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to "編集する" ,edit_genre_path(genre.id), class:"btn btn-sm btn-success" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>