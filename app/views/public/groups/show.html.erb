<h1>Groups#show</h1>
<p>Find me in app/views/groups/show.html.erb</p>


<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-11">
        <h3>グループ詳細</h3>
          <table class="table table-hover table-inverse">
            <thead>
              <th>Id</th>
              <th>名前</th>
              <th>紹介文</th>
              <th>Family code</th>
              <th>Owner id</th>
              <th>Group image</th>
              <th>グループ編集</th>
              <th>グループ解除</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td><%= link_to @group.id, group_path(@group) %></td>
              <td><%= @group.name %></td>
              <td><%= @group.introduction %></td>
              <td><%= @group.family_code %></td>
              <td><%= @group.owner_id %></td>
              <td>
              <%= image_tag @group.get_image(100, 100) %>
              </td>
              <td>
              <%# if @user == current_user %>
              <p><%= link_to "グループ編集", edit_group_path(@group.id) , class:"btn btn-success" %></p>
              <%# end %>
              </td>
              <td>
              <%# if @user == current_user %>
              <p><%= link_to "グループ解除", group_path(@group.id), class:"text-dark", class:"btn btn-secondary", method: :delete, "data-confirm" => "本当に削除しますか？" %></p>
              <%# end %>
              </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

