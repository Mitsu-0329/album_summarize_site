<div class="row">
  <div class="col">
    <div class="form-body">
      <% if group.errors.any? %>
        <ul class="alert alert-danger" role="alert">
          <h6 class="alert-heading">
            <%= group.errors.count %>件のエラーが発生しました
          </h6>
          <% group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: [:public, @group], url: groups_path, local: true do |f| %>
        <div class="input-group mb-3 mt-4">
          <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
          </div>
          <%= f.text_field :name, class: "form-control", placeholder: "グループネーム" %>
        </div>
        <%= f.text_area :introduction, class: "form-control mb-3", rows: "3", placeholder: "紹介文" %>
        <%= f.text_field :family_code, class: "form-control", placeholder: "ファミリーコード" %>
        <div class="input-group mb-3 mt-3">
        <%= f.file_field :image, accept: "image/*", class: "w-100" %>
        </div>
        <hr>
        <%= f.submit 'グループ作成', class: "btn btn-lg btn-block btn-info mt-4" %>
      <% end %>
    </div>
  </div>
</div>