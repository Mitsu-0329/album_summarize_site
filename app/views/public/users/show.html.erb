<!-- ユーザーの詳細 -->
<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        <%= render 'public/posts/sidebar', posts: @posts, post: @new_post %>
      </div>
      <div class="col-md-8">
        <h3><%= current_user.name %></h3>
        <% if @group.present? %>
          <p><%= link_to "グループ詳細", group_path(@group), class:"btn btn-success" %></p>
        <% end %>
          <table class="table table-hover table-inverse">
            <thead>
              <th>Profile Image</th>
              <th>編集ボタン</th>
              <th>退会ボタン</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <tr>
              <td>
              <%= image_tag current_user.get_profile_image(100,100) %>
              </td>
              <td>
              <% if @user.email != "guest@example.com" %>
                <% if @user == current_user %>
                <p><%= link_to "プロフィール編集", edit_user_path(current_user) , class:"btn btn-success" %></p>
                <% end %>
              <% end %>
              </td>
              <td>
              <% if @user == current_user %>
              <span> ｜ </span><%= link_to "退会", user_path(current_user), class:"text-dark", class:"btn btn-secondary", method: :delete, "data-confirm" => "本当に退会しますか？" %>
              <% end %>
              </td>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>



