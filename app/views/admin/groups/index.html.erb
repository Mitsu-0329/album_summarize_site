<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-12">
        <h1>Admin Groups</h1>

        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>Id</th>
              <th>Name</th>
              <th>Introduction</th>
              <th>Family code</th>
              <th>Owner id</th>
              <th>Created_at</th>
              <th>編集ボタン</th>
              <th>削除ボタン</th>
            </tr>
          </thead>
          <tbody>
            <% @groups.each do |group| %>
              <tr>
                <td><%= group.id %></td>
                <td><%= group.name %></td>
                <td><%= group.introduction %></td>
                <td><%= group.family_code %></td>
                <td><%= group.owner_id %></td>
                <td><%= group.created_at %></td>
                <td>
                <%= link_to "編集", edit_admin_group_path(group) , class:"btn btn-success" %>
                </td>
                <td>
                <%= link_to "削除", admin_group_path(group), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</main>