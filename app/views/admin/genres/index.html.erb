<h1>Admin Genres</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>Genre Name</th>
      <th>created_at</th>
      <th>編集ボタン</th>
      <th>削除ボタン</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.id, admin_genre_path(genre) %></td>
        <td><%= genre.genre_name %></td>
        <td><%= genre.created_at %></td>
        <td>
        <p><%= link_to "ジャンル編集", edit_admin_genre_path(genre) , class:"btn btn-success" %></p>
        </td>
        <td>
        <%= link_to "ジャンル削除", admin_genre_path(genre), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>