<h1>Admin::PostComments#index</h1>
<p>Find me in app/views/admin/comments/index.html.erb</p>


  <%#= render "comments", posts: @posts, post_comments: @post_comments %>


<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>user name</th>
      <th>post title</th>
      <th>comment</th>
      <th>created_at</th>
    </tr>
  </thead>
  <tbody>
    <% @post_comments.each do |post_comment| %>
      <tr>
        <td><%= post_comment.id %></td>
        <td><%= link_to post_comment.user.name, admin_user_path(post_comment.user_id) %></td>
        <td><%= post_comment.post.title %></td>
        <td><%= post_comment.comment %></td>
        <td><%= post_comment.created_at %></td>
        <td><%= link_to "削除", admin_post_comment_path(post_comment), method: :delete, class: "btn btn-danger pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
