<h1>Admin::Users#show</h1>

<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-11">
        <table class="table table-hover table-inverse">
          <thead>
            <th>User Name</th>
            <th>Profile Image</th>
            <th>Email</th>
            <th>Family Code</th>
            <th>退会ボタン</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <td>
            <h5><%= @user.name %></h5>
            </td>
            <td>
            <%= image_tag @user.get_profile_image(100,100) %>
            </td>
            <td>
            <%= @user.email %>
            </td>
            <td>
            <%= @user.family_code %>
            </td>
            <td>
            <span> ｜ </span><%= link_to "退会", admin_user_path(@user), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
            </td>
          </tbody>
        </table>
      </div>
    </div>
  <div>
</main>
